BoxLayoutExample

<BoxLayoutExample>:
    orientation: "horizontal"
    Button:
        text: "Button A"
        background_color: 255,1,1,1
        size_hint: .5,1
    Button:
        text: "Button B"
        background_color: 1,1,255,1
        size_hint: 2,1
    Button:
        text: "Button C"
        background_color: 1,255,1,1
        size_hint: 1,.5
        # horizontal positions: "x"(left), "center_x", "right"
        # vertical positions: "y"(bottom), "center_y", "top"
        pos_hint: {"y":.5}



<MainWidget>
    Button:
        text: "Button A"
        size: "200dp", "300dp"
        pos: "500", "100dp"
        color: 1,.75,.5,0.75
        background_color: .25,1,.75
    Label:
        text: "Label A"
        size: "200dp", "300dp"
        pos: "100dp", "100dp"
        color: .5,1,1,0.5
